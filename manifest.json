{
  "manifest_version": 2,
  "name": "My WebExtension",
  "version": "1.0",
  "description": "My WebExtension description",
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "permissions": [
    "activeTab",
    "https://translate.google.com/"
  ],
  "web_accessible_resources": [
    "dialog.html",
    "dialog.css",
    "dialog.js"
  ],
  "background": {
    "scripts": ["content.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  
      "js": ["dialog.js", "content.js"],  
      "css": ["dialog.css"],  
      "run_at": "document_idle"
    }
  ]
}
